<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/holdexpander_item_height"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/popup_copy"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="@dimen/holdexpander_item_min_width"
        android:paddingLeft="@dimen/holdexpander_item_left_padding"
        android:paddingRight="@dimen/holdexpander_item_right_padding"
        android:paddingTop="@dimen/holdexpander_item_top_padding"
        android:paddingBottom="@dimen/holdexpander_item_bottom_padding"
        android:gravity="center"
        android:background="@drawable/message_pop_middle_item"
        android:text="+1"
        android:textSize="@dimen/message_popup_menu_text_size"
        android:textColor="#ffffff"
        android:textColorHighlight="#ffffff" />

    <View
        android:id="@+id/popup_save_divider"
        android:layout_height="match_parent"
        android:layout_width="@dimen/holdexpander_item_divider_height"
        android:background="@color/holdexpander_divider_color"
        android:visibility="gone" />


</LinearLayout>